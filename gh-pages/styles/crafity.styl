.tagline 
	margin-top:													20px
	color:															gray

.smaller 
	font-size:													.8em

.link.list 
	padding-top:												20px

.link.list a 
	text-decoration:										underline

.bullet
	background:													url('/images/bullet.png?v=1')
	display:														inline-block
	width:															11px
	height:															11px
	margin:															0 20px 0 20px

  
.images
	position:																	relative
	text-align: center
	margin: 																			40px 0 50px 0
	perspective:													1000
	-moz-transform: 											unquote('perspective(1000px)')
	-moz-transform-style: 								preserve-3d
	perspective-origin:										center center
	.image
		min-width: 																	0
		display: 																		inline-block
		position: 																	relative
		//box-shadow:																-5px 5px 15px black
		//height: 																	100%
		//perspective:																1000
		perspective-origin:													center center
		transform: 																	rotateY(45deg)
		//transform-style:														preserve-3d
		transition-property:												transform, -webkit-transform, -moz-transform, -o-transform, -ms-transform
		transition-duration:												.75s
		timing-function:														ease-in-out
		transform-origin:														50% 0
		img
			position:																	relative
			border:																		10px solid black
			box-shadow:																-5px 5px 15px black //rgba(0, 0, 0, .25)
			z-index: 100
			//-webkit-transform:												rotateY(15deg)
			//-webkit-transform-style:									preserve-3d;
			//-webkit-transition-property:							webkit-transform
			//-webkit-transition-duration:							.75s
			//-webkit-timing-function:									ease-in-out
			//-webkit-transform-origin:									50% 0
		.caption
			position:																	absolute
			font-size:																80%
			background-color:													rgba(0,0,0,.7)
			box-shadow:																-20px 20px 30px rgba(0,0,0,.6)
			bottom:																		25px
			padding:																	10px
			width:																		120px
			text-align:																center
			transition-property:												transform, -webkit-transform, -moz-transform, -o-transform, -ms-transform
			transition-duration:												.75s
			transform:																translate(40px, 0)
			-moz-transform:															translate(0px, 0)
			z-index: 1000
			display:	block;
		.no-touch &:hover
			transform:																rotateY(0)
			.caption
				//left: 																	-60px
				//background-color:												rgba(0,0,0,.8)
				transform:																translate(-60px, 0)
				//-moz-transform:															translate(0px, 0)
