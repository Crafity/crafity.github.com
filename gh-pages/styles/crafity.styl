@import reset
@import css3
@import "nib"

body 
	font-size:									12pt
	text-align:									center
	background:									#1f1f1f url('./images/Beehive_background_small.jpg?v=1') repeat
	color:											#A1A1A1
	font-family:								sans-serif //Helvetica, Consolas, courier
	font-weight:								normal
	cursor:											default
	line-height:								1.5em
	word-spacing:								0.1em
	margin:											0
	padding:										0

h2 
	font-size:								14pt
	text-transform:						uppercase
	text-shadow:							black 1px 1px 1px
	clear:										both
	color:										white
	width:										100%
	margin:										0px
	padding:									20px 0 10px 0
	&.right
		text-align:							right

h3 
	font-size:								11pt
	margin:										0px
	padding:									10px 0 5px 0
	clear:										none
	color:										#9AB4CB
	text-transform:						uppercase
	text-shadow:							black 1px 3px 1px

h4 
	margin:										0px
	padding:									0px
	margin-top:								10px
	font-weight:							bold
	display:									inline

p
	margin:										0px
	padding:									0 0 10px 0


strong 
	font-weight: bold

a img 
	cursor: pointer

a 
	color:								#7CB6E9
	cursor:								pointer
	text-shadow:					black 1px 1px 1px
	text-decoration:			none
	transition:						color 1s
	.no-touch &:hover
		color:							#E38418
		text-shadow:				black 1px 2px 1px


ul
	list-style-type: none
	list-style-position: outside
	list-style-image: none
	padding: 0 0 10px 0
	margin: 0px
	white-space: wrap


li
	margin: 0px
	padding: 0px
	list-style-type: none
	list-style-position: outside
	list-style-image: none
	background-image: url('./images/bullet.png?v=1')
	background-repeat: no-repeat;
	background-position: left 7px;
	padding-left: 20px;

.right 
	float: right

.left 
	float: left

.link.goto-top 
	text-transform: lowercase
	font-size: .9em
	font-weight: bold
	float: right

.section-end 
	visibility: hidden
	clear: both

.hidden 
	display: none

a.link
	&.external:before,
	&.mail:before,
	&.document:before,
	&.download:before
		position: relative
		display: inline-block
		font-family: dingbats
		color: white
		font-size: 14pt
		width: 18px
		letter-spacing: 5px
		height: 18px
		top: 2px
		margin-right: 10px
		//float: left

	&.mail:before
		content: ""
		top: 4px
		background: url('./images/email.png?v=1') center center no-repeat

	&.document:before
		content: "\1F4C4"

	&.external:before
		content: ""
		background: url('./images/tab.png?v=1') center center no-repeat

	&.download:before
		content: ""
		background: url('./images/download.png?v=1') center center no-repeat

