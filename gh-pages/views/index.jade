// [if gt IE 8] <!
html.no-js.not-ready.no-touch(lang="en")
	!= '<!-- <![endif]-->'
	//- <![endif]
	head
		meta(charset='utf-8')
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="author", content="Crafity")
		meta(name="powered by", content="Crafity")
		meta(name="description", content="Crafity and Open Source. Overview of Crafity's projects on Github/")
		meta(name="viewport", content="width=device-width,initial-scale=1,minimum-scale=1.0, maximum-scale=1.0")
		title Open Source @ Crafity
		script(src="./scripts/modernizr-latest.js")
		link(href="./styles/crafity.css?v=999", rel="stylesheet", type="text/cs")
body
	div#main.up
		header#header
			h1#logo
				a.link.middle(href="/", alt="Crafity - Built with Passion") Crafity - Built with Passion
			div.loader
		div#container
			section.visible.dont-animate
				.body
					.disabled.close.command
					h2.knowledge Open Source Node Modules by Crafity
					p The following node modules have been developed and open sourced by Crafity. These modules have been developed while building 'real life' applications. Click on a module to get more information.
					.repositories
						h3.loading.message Loading repositories...
						.repository.template.hidden
							h3 {{name}}
							aside.right
								ul.links.external
									li
										a.link.external(href="https://github.com/Crafity/{{name}}", target="_blank") Github
									li
										a.link.external(href="https://npmjs.org/package/{{name}}", target="_blank") NPM
							article.knowledge
								p {{description}}
								div watchers_count: {{watchers_count}}
								div open_issues_count: {{open_issues_count}}
								div updated_at: {{updated_at}}
								div.readme.hidden
									a.show.readme(href="#") Readme
									div.content.hidden {{readme}}
	script(src="./scripts/crafity-min.js?v=999")
