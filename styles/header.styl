/* HEADER */
header
	/* Attach the header to the full size of the browser */
	position: relative
	overflow: hidden
	margin: 0
	padding: 0
	min-height: 180px
	//box-shadow(0, 2px, 35px, #111)
	box-shadow(0px, 5px, 35px, 1px, #101010)

	/* Safari 4-5, Chrome 1-9 */
	/* Can't specify a percentage size? Laaaaaame. */
	background: -webkit-gradient(radial, center center, 0, center center, 460, from(rgba(200,200,200,.4)), to(rgba(200,200,200,.0)));

	/* Safari 5.1+, Chrome 10+ */
	background:  -webkit-radial-gradient(circle, rgba(150,150,150,.5), rgba(150,150,150,.1))

	/* Firefox 3.6+ */
	background: -moz-radial-gradient(circle, rgba(200,200,200,.4), rgba(200,200,200,.0));

	/* IE 10 */
	background: -ms-radial-gradient(circle, rgba(200,200,200,.4), rgba(200,200,200,.0));

	//background: -o-radial-gradient(circle, rgba(200,200,200,.4), rgba(200,200,200,.0));
	// TODO Opera radial gradient implementeren -> wachten op Opera 12
	background: radial-gradient(50% 50%, 80% 80%, rgba(200,200,200,.4), rgba(200,200,200,.0));

	/* Safari 4-5, Chrome 1-9 */
	/* Can't specify a percentage size? Laaaaaame. */
	//background: -webkit-gradient(radial, center center, 0, center center, 460, from(rgba(200,200,200,.4)), to(rgba(200,200,200,.0)));

	/* Safari 5.1+, Chrome 10+ */
