	.no-cssgradients &
		border-bottom: solid 4px silver;

	&:before
		content: ""
		display: block
		position:absolute
		height: 5px
		bottom: 0
		left: 0
		right: 0
		//opacity: .7
		z-index: 500
		background: rgba(80,80,80,1) linear-gradient(left, rgba(0,0,0,.3), 50% rgba(200, 200, 200, .6), 100% rgba(0,0,0,.3))
		// start hard boiled
		box-shadow: 0 -1px 2px rgb(250,250,250,1), 0 2px 1px rgba(0,0,0,.5);
		// end hard boiled
	.loader
		opacity: 0
		display: block
		position: absolute
		height: 4px
		width: 100%
		bottom: 1px
		left: -100%
		z-index: 400
		background: linear-gradient(left, 60% rgba(200, 200, 200, 0), 85% rgba(255, 255, 255, 1), 95% rgba(200, 200, 200, 1), 100% rgba(30,30,70,0))
		transition: opacity 1s ease-out
		&.done
			opacity: 0
	.loading & .loader
		z-index: 4000
		animation-name: scroll-loader
		animation-duration: 2s
		animation-iteration-count: infinite
		animation-timing-function: linear
		animation-fill-mode: forward
		animation-direction: normal
		opacity: 1

	#logo
		margin: 0
		padding: 0
		text-align: center
		//overflow: hidden
		&:before
			display: block
			content: ""
			position: absolute
			width: 100%
			height: 100%
			opacity: .7
			z-index: 700
			background: #1f1f1f url('./images/Beehive_background_small.jpg?v=1') repeat
		a
			position: absolute
			display: block
			z-index: 2000
			margin: -114px auto
			//bottom: 220px
			height: 229px
			bottom: 50%
			left: 0
			right: 0

@media (min-width: 481px)
	header
		position: fixed
		display: block
		overflow: hidden
		pointer-events: none
		top: 0
		left: 0
		right: 0
		bottom: 100%
		margin-bottom: 0px
		min-height: 180px
		transition: bottom 4s ease-out
		z-index: 1000
		.up &
			bottom: 100%
			//transition: margin-bottom 4s ease-out
		
		.down &
			bottom: 0%
			//transition: margin-bottom 4s ease-out
		
		.hidden.down &
			transition: bottom 0s
			bottom: 0%
			//transition: margin-bottom 0s ease-out
		#logo
			min-height: 190px
			position: absolute
			pointer-events: all
			display: block
			top: 0
			left: 0
			right: 0
			bottom: 0
